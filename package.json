{
  "name": "core",
  "version": "1.0.0",
  "description": "The Core",
  "main": "src/index.ts",
  "author": "Right2Drive",
  "license": "MIT",
  "scripts": {
    "start": "npm run build:dev && npm run concurrently -- \"npm run watch\" \"npm run serve\"",
    "debug": "npm run build:dev && npm run concurrently -- \"npm run watch\" \"npm run serve:debug\"",
    "clean": "rimraf dist/*",
    "start:prod": "node dist/app.js",
    "build": "npm run build:prod",
    "build:dev": "npm run webpack -- --env=dev",
    "build:prod": "npm run webpack -- --env=prod",
    "watch": "npm run build:dev -- --watch",
    "serve": "nodemon dist/app.js",
    "serve:debug": "nodemon --inspect dist/app.js",
    "webpack": "./node_modules/.bin/webpack",
    "test": "npm run build:dev && npm run test:unit",
    "test:unit": "./node_modules/.bin/mocha dist/test.js",
    "lint": "npm run lint:src && npm run lint:test",
    "lint:fix": "npm run lint:src:fix && npm run lint:test:fix",
    "lint:test": "npm run lint:core -- \"test/**/*.ts\"",
    "lint:test:fix": "npm run lint:test -- --fix",
    "lint:src": "npm run lint:core -- \"src/**/*.ts\"",
    "lint:src:fix": "npm run lint:src -- --fix",
    "lint:core": "node_modules/.bin/tslint -c tslint.json",
    "concurrently": "node_modules/.bin/concurrently -k -p \"[{name}]\" -n \"Webpack,Node\" -c \"cyan.bold,green.bold\""
  },
  "dependencies": {
    "bcrypt": "1.0.3",
    "body-parser": "1.18.0",
    "chai": "^4.1.2",
    "compression": "1.7.0",
    "cors": "2.8.4",
    "dotenv": "4.0.0",
    "express": "4.15.4",
    "express-jwt": "5.3.0",
    "jsonwebtoken": "8.0.1",
    "knex": "0.13.0",
    "mocha": "3.5.2",
    "morgan": "1.8.2",
    "mysql": "2.14.1",
    "tslint-loader": "3.5.3",
    "typescript": "2.5.2",
    "winston": "2.3.1"
  },
  "devDependencies": {
    "@types/bcrypt": "1.0.0",
    "@types/body-parser": "1.16.5",
    "@types/chai": "^4.0.4",
    "@types/compression": "0.0.34",
    "@types/cors": "2.8.1",
    "@types/dotenv": "4.0.1",
    "@types/express": "4.0.37",
    "@types/express-jwt": "0.0.37",
    "@types/jsonwebtoken": "7.2.3",
    "@types/knex": "0.0.61",
    "@types/mocha": "2.2.43",
    "@types/morgan": "1.7.32",
    "@types/node": "8.0.28",
    "@types/webpack-env": "1.13.1",
    "@types/winston": "2.3.5",
    "awesome-typescript-loader": "3.2.3",
    "concurrently": "3.5.0",
    "friendly-errors-webpack-plugin": "1.6.1",
    "nodemon": "1.12.0",
    "rimraf": "2.6.1",
    "source-map-loader": "0.2.1",
    "testdouble": "^3.2.6",
    "tslint": "5.7.0",
    "tslint-config-airbnb": "5.2.1",
    "webpack": "3.5.6",
    "webpack-merge": "4.1.0",
    "webpack-node-externals": "1.6.0"
  }
}
